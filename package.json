{
  "name": "plsql-executor",
  "displayName": "PLSQL Executor",
  "description": "This extension execute the PL/SQL script using plsql plus",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "PLSQL Executor",
      "properties": {
          "plsql-executor.sqlplusPath": {
            "type": "string",
            "description": "Il path dove si trova il file sqlplus.exe"
          },
          "plsql-executor.profile": {
            "type": "string",
            "description": "Profilo di default da utilizzare"
          }, 
          "plsql-executor.profiles": {
            "type": "object",
            "description": "Profili di connessione verso i vari ambienti",
            "additionalProperties": {}
          }
      }
    },
    "commands": [
      {
        "command": "plsql-executor.runSqlFile",
        "title": "Run current script"
      },
      {
        "command": "plsql-executor.launchTerminal",
        "title": "Open Terminal"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "ts-loader": "^9.4.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.4"
  }
}
